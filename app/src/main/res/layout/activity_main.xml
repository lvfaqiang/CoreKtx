<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        app:bl_solid_color="@color/white"
        app:bl_corners_topRightRadius="@dimen/dp_12"
        app:bl_corners_topLeftRadius="@dimen/dp_12"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/homeLayout"
            style="@style/main_tab_item">

            <ImageView
                app:bl_selected_drawable="@drawable/ic_main_tab_checked"
                app:bl_unSelected_drawable="@drawable/ic_main_tab_uncheck"
                style="@style/main_tab_icon" />

            <TextView
                android:text="首页"
                style="@style/main_tab_text"
                app:bl_selected_textColor="@color/c_111e38"
                app:bl_unSelected_textColor="@color/c_cfd2d7" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dinnerLayout"
            style="@style/main_tab_item">

            <ImageView
                app:bl_selected_drawable="@drawable/ic_main_tab_checked"
                app:bl_unSelected_drawable="@drawable/ic_main_tab_uncheck"
                style="@style/main_tab_icon" />

            <TextView
                android:text="首页"
                style="@style/main_tab_text"
                app:bl_selected_textColor="@color/c_111e38"
                app:bl_unSelected_textColor="@color/c_cfd2d7" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/videoLayout"
            style="@style/main_tab_item">

            <ImageView
                app:bl_selected_drawable="@drawable/ic_main_tab_checked"
                app:bl_unSelected_drawable="@drawable/ic_main_tab_uncheck"
                style="@style/main_tab_icon" />

            <TextView
                android:text="首页"
                style="@style/main_tab_text"
                app:bl_selected_textColor="@color/c_111e38"
                app:bl_unSelected_textColor="@color/c_cfd2d7" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/blessLayout"
            style="@style/main_tab_item">

            <ImageView
                app:bl_selected_drawable="@drawable/ic_main_tab_checked"
                app:bl_unSelected_drawable="@drawable/ic_main_tab_uncheck"
                style="@style/main_tab_icon" />

            <TextView
                android:text="首页"
                style="@style/main_tab_text"
                app:bl_selected_textColor="@color/c_111e38"
                app:bl_unSelected_textColor="@color/c_cfd2d7" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>