<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--启动页主题样式，解决启动白屏效果-->
    <style name="launcher_theme" parent="AppTheme">
        <!--        <item name="android:windowBackground">@color/red</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--水平线-->
    <style name="line_hor_ee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px_1</item>
        <!--        <item name="android:background">@color/color_ee</item>-->
    </style>

    <!--垂直线-->
    <style name="line_ver_ee">
        <item name="android:layout_width">@dimen/px_1</item>
        <item name="android:layout_height">match_parent</item>
        <!--        <item name="android:background">@color/color_ee</item>-->
    </style>


    <style name="style_loading_light_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
